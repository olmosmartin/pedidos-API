    "/usuarios/login": {
      "post": {
        "tags": [
          "Usuarios"
        ],
        "summary": "Devuelve el token de autorizacion",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "description": "Email del usuario"
                  },
                  "password": {
                    "type": "string",
                    "description": "Password del usuario"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Informacion del usuario",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "_id": {
                      "type": "string",
                      "description": "ID dependiendo del tipo de usuario"
                    },
                    "auth_token": {
                      "type": "string",
                      "description": "Token de autorizacion para el usuario"
                    },
                    "role": {
                      "type": "string",
                      "description": "Rol del usuario"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/usuarios/password_reset": {
      "post": {
        "tags": [
          "Usuarios"
        ],
        "summary": "Envia un mail para resetear la contrase単a",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "description": "Email del usuario"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Comfirma si se envio el mail"
          }
        }
      }
    },
    "/usuarios/password_change": {
      "post": {
        "tags": [
          "Usuarios"
        ],
        "summary": "Cambia la contrase単a del usuario",
        "parameters": [
          {
            "name": "auth-token",
            "in": "header",
            "required": true,
            "description": "Token de autorizacion, se puede usar el del mail de reset o si el usuario esta logeado el token normal",
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "password": {
                    "type": "string",
                    "description": "Nueva contrase単a del usuario"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Comfirma si se actualizo la contrase単a"
          }
        }
      }
    },
