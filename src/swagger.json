  "components": {
    "schemas": {
      "Direccion": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "string",
            "description": "El ID autogenerado por mongoDB"
          },
          "latitud": {
            "type": "number",
            "description": "La latitud de origen"
          },
          "longitud": {
            "type": "number",
            "description": "La longitud de origen"
          },
          "ciudad": {
            "type": "string",
            "description": "La ciudad de origen"
          },
          "calle": {
            "type": "string",
            "description": "La calle de origen"
          },
          "numero": {
            "type": "number",
            "description": "El numero de la calle"
          }
        }
      },
      "Usuario": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "string",
            "description": "El ID autogenerado por mongoDB"
          },
          "nombre": {
            "type": "string",
            "description": "El nombre de usuario"
          },
          "email": {
            "type": "string",
            "description": "El email del usuario"
          },
          "password": {
            "type": "string",
            "description": "La contrase単a del usuario"
          },
          "telefono": {
            "type": "number",
            "description": "El telefono de contacto"
          },
          "role": {
            "type": "string",
            "description": "El rol del usuario",
            "enum": [
              "CLIENTE",
              "NEGOCIO",
              "REPARTIDOR",
              "ADMIN"
            ]
          }
        }
      },
      "Producto": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "string",
            "description": "El ID autogenerado por mongoDB"
          },
          "nombre": {
            "type": "string",
            "description": "Nombre del producto"
          },
          "descripcion": {
            "type": "string",
            "description": "Descripcion breve del producto"
          },
          "file": {
            "type": "string",
            "description": "String Base64 que representa la imagen"
          },
          "precio": {
            "type": "number",
            "description": "El precio total del producto"
          },
          "descuento": {
            "type": "number",
            "description": "Un porcentaje de descuento entre 1 y 100, es opcional"
          },
          "tipo_comida": {
            "type": "string",
            "description": "Tipo de comida a la que pertenece el producto"
          }
        }
      },
      "Negocio": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "string",
            "description": "El ID autogenerado por mongoDB"
          },
